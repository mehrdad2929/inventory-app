<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css">
    <style>
        .category-color {
            display: inline-block;
            width: 12px;
            height: 12px;
            border-radius: 2px;
            margin-right: 6px;
        }
    </style>
</head>
<body>
    <main class="container">
        <h1><%= title %></h1>
        
        <article>
            <form action="/add" method="POST">
                <!-- Basic Info -->
                <label>
                    Item Name
                    <input 
                        type="text" 
                        name="name" 
                        placeholder="e.g., Aghanim's Scepter"
                        required
                    >
                </label>
                
                <label>
                    Price (gold)
                    <input 
                        type="number" 
                        name="price" 
                        placeholder="0"
                        min="0"
                        required
                    >
                </label>
                
                <label>
                    Image URL
                    <input 
                        type="url" 
                        name="src" 
                        placeholder="https://example.com/image.jpg"
                        value="/images/bread.svg"
                    >
                    <small>Leave default or paste an image URL</small>
                </label>
                
                <!-- Categories -->
                <fieldset>
                    <legend>Category *</legend>
                    <% categories.forEach(function(category, index) { %>
                        <label>
                            <input 
                                type="radio" 
                                name="category_id" 
                                value="<%= category.id %>"
                                <%= index === 0 ? 'checked' : '' %>
                                required
                            >
                            <span class="category-color" style="background-color: <%= category.color %>;"></span>
                            <%= category.category %>
                        </label>
                    <% }); %>
                </fieldset>
                
                <!-- Description -->
                <label>
                    Description
                    <textarea 
                        name="description" 
                        rows="5"
                        placeholder="What story is behind this item?"
                        maxlength="500"
                    ></textarea>
                    <small>Optional, max 500 characters</small>
                </label>
                
                <button type="submit">Add Item</button>
            </form>
        </article>
        
        <a href="/" role="button" class="secondary">Back to Home</a>
    </main>
</body>
</html>
